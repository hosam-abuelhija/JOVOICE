@model IEnumerable<JOVOICE.Models.TempAd>

@{
    ViewBag.Title = "Advertisements Applications";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Advertisements Applications</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.listname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.electionarea)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.listname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.electionarea)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.image)
        </td>
        
        <td>
            <button type="submit" name="approvedAdId" value="@item.id" class="btn btn-primary"> Accept </button>
            @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-secondary" })
            @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
