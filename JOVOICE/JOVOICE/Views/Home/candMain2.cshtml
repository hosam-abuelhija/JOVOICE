
@{
    ViewBag.Title = "خدمات المترشحين";
    Layout = "~/Views/Shared/_LayoutPage1gh.cshtml";
}

<style>
    .main2 {
        display: flex;
        justify-content: center;
    }
</style>

<!-- Modal Search Start -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h4 class="modal-title text-secondary mb-0" id="exampleModalLabel">Search by keyword</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex align-items-center">
                <div class="input-group w-75 mx-auto d-flex">
                    <input type="search" class="form-control p-3" placeholder="keywords"
                           aria-describedby="search-icon-1">
                    <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Search End -->
<!-- Header Start -->
<!-- Header End -->
<!-- Services Start -->
<div class="container-fluid service overflow-hidden py-5">
    <div class="container py-5">
        <div class="section-title text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="sub-style">
                <h5 class="sub-title text-primary px-3">خدمات المترشحين</h5>
            </div>
            <h1 class="display-5 mb-4">تسهيل عملية الترشح بنجاح</h1>
            <p class="mb-0">
                نحن هنا لمساعدتك في تقديم طلبات الترشح للانتخابات النيابية الأردنية بكل سهولة ويسر.
                يمكنك من خلال موقعنا تقديم طلبات الترشح للقوائم المحلية والحزبية، طلبات المناظرات، وطلبات الإعلان
                على الصفحة الرئيسية
            </p>
        </div>

        <div class="row g-6 main2">
            <div class="col-lg-6 col-xl-4 wow fadeInUp" data-wow-delay="0.3s">
                <div class="service-item">
                    <div class="service-inner">
                        <div class="service-img">
                            <img src="~/Content/img/local.png" style="height: 450px; width: 390px" class="img-fluid w-100 rounded" alt="Local Election">
                        </div>
                        <div class="service-title">
                            <div class="service-title-name">
                                <div class="bg-primary text-center rounded p-3 mx-5 mb-4">
                                    <a href="local_nomination.html" class="h4 text-white mb-0">طلب الترشح للقوائم المحلية</a>
                                </div>
                                <a class="btn bg-light text-secondary rounded-pill py-3 px-5 mb-4" href="local_nomination.html">تقديم طلب</a>
                            </div>
                            <div class="service-content pb-4">
                                <a href="local_nomination.html">
                                    <h4 class="text-white mb-4 py-3">طلب الترشح للقوائم المحلية</h4>
                                </a>
                                <div class="px-4">
                                    <p class="mb-4">قدم طلبك للترشح للقوائم المحلية في الانتخابات النيابية الأردنية.</p>
                                    <a class="btn btn-primary border-secondary rounded-pill text-white py-3 px-5" href="@Url.Action("Create_gh", "TempCandidateLocals")">تقديم طلب</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-xl-4 wow fadeInUp" data-wow-delay="0.5s">
                <div class="service-item">
                    <div class="service-inner">
                        <div class="service-img">
                            <img src="~/Content/img/party.png" style="height: 450px; width: 390px" class="img-fluid w-100 rounded" alt="Party Election">
                        </div>
                        <div class="service-title">
                            <div class="service-title-name">
                                <div class="bg-primary text-center rounded p-3 mx-5 mb-4">
                                    <a href="party_nomination.html" class="h4 text-white mb-0">طلب الترشح للقوائم الحزبية</a>
                                </div>
                                <a class="btn bg-light text-secondary rounded-pill py-3 px-5 mb-4" href="party_nomination.html">تقديم طلب</a>
                            </div>
                            <div class="service-content pb-4">
                                <a href="party_nomination.html">
                                    <h4 class="text-white mb-4 py-3">طلب الترشح للقوائم الحزبية</h4>
                                </a>
                                <div class="px-4">
                                    <p class="mb-4">قدم طلبك للترشح للقوائم الحزبية في الانتخابات النيابية الأردنية.</p>
                                    <a class="btn btn-primary border-secondary rounded-pill text-white py-3 px-5" href="@Url.Action("Create_ghb", "TempPartyCandidates")">تقديم طلب</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Services End -->
